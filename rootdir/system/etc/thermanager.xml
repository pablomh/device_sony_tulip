<thermanager>
	<resources>
		<!-- thermal zones -->
		<resource name="pa_therm0" type="tz">/sys/class/thermal/thermal_zone0</resource>
		<resource name="xo_therm" type="tz">/sys/class/thermal/thermal_zone1</resource>
		<resource name="xo_therm_buf" type="tz">/sys/class/thermal/thermal_zone2</resource>

		<resource name="tsens_tz_sensor0" type="tz">/sys/class/thermal/thermal_zone3</resource>	
		<resource name="tsens_tz_sensor1" type="tz">/sys/class/thermal/thermal_zone4</resource>
		<resource name="tsens_tz_sensor2" type="tz">/sys/class/thermal/thermal_zone5</resource>
		<resource name="tsens_tz_sensor3" type="tz">/sys/class/thermal/thermal_zone6</resource>
		<resource name="tsens_tz_sensor5" type="tz">/sys/class/thermal/thermal_zone7</resource>
		<resource name="tsens_tz_sensor6" type="tz">/sys/class/thermal/thermal_zone8</resource>
		<resource name="tsens_tz_sensor7" type="tz">/sys/class/thermal/thermal_zone9</resource>
		<resource name="tsens_tz_sensor8" type="tz">/sys/class/thermal/thermal_zone10</resource>
		<resource name="tsens_tz_sensor9" type="tz">/sys/class/thermal/thermal_zone11</resource>

		<resource name="pm8916_tz" type="tz">/sys/class/thermal/thermal_zone12</resource>
		<resource name="battery" type="tz">/sys/class/thermal/thermal_zone13</resource>

		<!-- cpu clusters -->
		<resource name="cluster-0-max-clk" type="sysfs">/sys/module/msm_performance/parameters/cpu_max_freq</resource>
		<resource name="cluster-1-max-clk" type="sysfs">/sys/module/msm_performance/parameters/cpu_max_freq</resource>

		<!-- hotplugging -->
		<resource name="thermal-max-cpus" type="sysfs">/sys/devices/system/cpu/cpuquiet/nr_thermal_max_cpus</resource>

		<!-- adreno -->
		<resource name="adreno-max-clk" type="sysfs">/sys/class/kgsl/kgsl-3d0/max_gpuclk</resource>

		<!--- charging speed -->
		<resource name="charge_speed" type="sysfs">/sys/class/power_supply/battery/system_temp_level</resource>

		<!-- shutdown -->
		<resource name="shutdown" type="halt" delay="5" />
	</resources>

 	<control name="shutdown">
		<mitigation level="off" />
		<mitigation level="1"><value resource="shutdown" /></mitigation>
	</control>

	<!-- cluster 0 clocks -->
	<control name="cluster-0-clk">
		<mitigation level="off"><value resource="cluster-0-max-clk">0:4294967295</value></mitigation>
		<mitigation level="1"><value resource="cluster-0-max-clk">0:1113600</value></mitigation>
		<mitigation level="2"><value resource="cluster-0-max-clk">0:998400</value></mitigation>
		<mitigation level="3"><value resource="cluster-0-max-clk">0:800000</value></mitigation>
		<mitigation level="4"><value resource="cluster-0-max-clk">0:499200</value></mitigation>
		<mitigation level="5"><value resource="cluster-0-max-clk">0:249600</value></mitigation>
		<mitigation level="6"><value resource="cluster-0-max-clk">0:200000</value></mitigation>
	</control>

	<!-- cluster 1 clocks -->
	<control name="cluster-1-clk">
		<mitigation level="off"><value resource="cluster-1-max-clk">4:4294967295</value></mitigation>
		<mitigation level="1"><value resource="cluster-1-max-clk">4:1459200</value></mitigation>
		<mitigation level="2"><value resource="cluster-1-max-clk">4:1344000</value></mitigation>
		<mitigation level="3"><value resource="cluster-1-max-clk">4:1113600</value></mitigation>
		<mitigation level="4"><value resource="cluster-1-max-clk">4:960000</value></mitigation>
		<mitigation level="5"><value resource="cluster-1-max-clk">4:800000</value></mitigation>
		<mitigation level="6"><value resource="cluster-1-max-clk">4:533333</value></mitigation>
		<mitigation level="7"><value resource="cluster-1-max-clk">4:400000</value></mitigation>
		<mitigation level="8"><value resource="cluster-1-max-clk">4:345600</value></mitigation>
		<mitigation level="9"><value resource="cluster-1-max-clk">4:200000</value></mitigation>
	</control>

	<control name="cluster-1-hotplug">
		<mitigation level="off"><value resource="thermal-max-cpus">8</value></mitigation>
		<mitigation level="1"><value resource="thermal-max-cpus">7</value></mitigation>
		<mitigation level="2"><value resource="thermal-max-cpus">6</value></mitigation>
		<mitigation level="3"><value resource="thermal-max-cpus">5</value></mitigation>
		<mitigation level="4"><value resource="thermal-max-cpus">4</value></mitigation>
	</control>

	<!-- adreno clocks -->
	<control name="adreno-clk">
		<mitigation level="off"><value resource="adreno-max-clk">550000000</value></mitigation>
		<mitigation level="1"><value resource="adreno-max-clk">465000000</value></mitigation>
		<mitigation level="2"><value resource="adreno-max-clk">400000000</value></mitigation>
		<mitigation level="3"><value resource="adreno-max-clk">220000000</value></mitigation>
	</control>

	<!-- charging levels -->
<!-- 	<control name="charging">
		<mitigation level="off"><value resource="charge_speed">0</value></mitigation>
		<mitigation level="1"><value resource="charge_speed">1</value></mitigation>
		<mitigation level="2"><value resource="charge_speed">2</value></mitigation>
		<mitigation level="3"><value resource="charge_speed">3</value></mitigation>
		<mitigation level="4"><value resource="charge_speed">4</value></mitigation>
		<mitigation level="5"><value resource="charge_speed">5</value></mitigation>
		<mitigation level="6"><value resource="charge_speed">6</value></mitigation>
		<mitigation level="7"><value resource="charge_speed">7</value></mitigation>
		<mitigation level="8"><value resource="charge_speed">8</value></mitigation>
		<mitigation level="9"><value resource="charge_speed">9</value></mitigation>
	</control> -->

	<!-- throttling -->
	<configuration sensor="pm8916_tz">
		<threshold>
			<mitigation name="cluster-0-clk" level="off" />
			<mitigation name="cluster-1-clk" level="off" />
			<mitigation name="cluster-1-hotplug" level="off" />
			<mitigation name="adreno-clk" level="off" />
		</threshold>
		<threshold trigger="38400" clear="36400">
			<mitigation name="cluster-0-clk" level="off" />
			<mitigation name="cluster-1-clk" level="1" />
			<mitigation name="cluster-1-hotplug" level="off" />
			<mitigation name="adreno-clk" level="2" />
		</threshold>
		<threshold trigger="40000" clear="38000">
			<mitigation name="cluster-0-clk" level="off" />
			<mitigation name="cluster-1-clk" level="2" />
			<mitigation name="cluster-1-hotplug" level="off" />
			<mitigation name="adreno-clk" level="3" />
		</threshold>
        	<threshold trigger="41600" clear="39600">
			<mitigation name="cluster-0-clk" level="1" />
			<mitigation name="cluster-1-clk" level="3" />
			<mitigation name="cluster-1-hotplug" level="off" />
			<mitigation name="adreno-clk" level="3" />
		</threshold>
        	<threshold trigger="42400" clear="41200">
			<mitigation name="cluster-0-clk" level="3" />
			<mitigation name="cluster-1-clk" level="5" />
			<mitigation name="cluster-1-hotplug" level="1" />
			<mitigation name="adreno-clk" level="3" />
		</threshold>
        	<threshold trigger="43200" clear="42000">
			<mitigation name="cluster-0-clk" level="3" />
			<mitigation name="cluster-1-clk" level="7" />
			<mitigation name="cluster-1-hotplug" level="2" />
			<mitigation name="adreno-clk" level="3" />
		</threshold>
        	<threshold trigger="44800" clear="44000">
			<mitigation name="cluster-0-clk" level="4" />
			<mitigation name="cluster-1-clk" level="8" />
			<mitigation name="cluster-1-hotplug" level="2" />
			<mitigation name="adreno-clk" level="3" />
		</threshold>
        	<threshold trigger="46400" clear="45200">
			<mitigation name="cluster-0-clk" level="6" />
			<mitigation name="cluster-1-clk" level="9" />
			<mitigation name="cluster-1-hotplug" level="4" />
			<mitigation name="adreno-clk" level="3" />
		</threshold>
	</configuration>

	<!-- burn-out protection -->
 	<configuration sensor="pm8916_tz">
		<threshold>
			<mitigation name="shutdown" level="off" />
		</threshold>
		<threshold trigger="50000" clear="46400">
			<mitigation name="shutdown" level="1" />
		</threshold>
	</configuration>

	<!-- battery protection -->
	<configuration sensor="battery">
		<threshold>
			<mitigation name="shutdown" level="off" />
		</threshold>
		<threshold trigger="47600" clear="46400">
			<mitigation name="shutdown" level="1" />
		</threshold>
	</configuration>
</thermanager>
